# Environment Variables for DramaBox API

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# DramaBox Token URL (WAJIB DIISI!)
# URL untuk mendapatkan token dan device ID dari service eksternal
DRAMABOX_TOKEN_URL=https://your-token-service.com/get-token

# DramaBox API Configuration
DRAMABOX_VERSION_CODE=430
DRAMABOX_VERSION_NAME=4.3.0
DRAMABOX_CID=DRA1000042
DRAMABOX_PACKAGE_NAME=com.storymatrix.drama
DRAMABOX_LANGUAGE=in
DRAMABOX_PLATFORM_P=43

# Rate Limiting Configuration
DEFAULT_RATE_LIMIT=60
SEARCH_RATE_LIMIT=60
STREAMING_RATE_LIMIT=20
TOKEN_RATE_LIMIT=10